        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 10px;
            padding: 20px;

        }
        .product button {
            padding: 5px 10px;
            border: none;
            background-color: #007bff;
            color: white;
            border-radius: 50px;
            cursor: pointer;
            outline: none;
            font-size: 14px;
            margin: 5px;
        }
        .product button:hover {
            background-color: #0056b3;
            transform: translateY(-0.25em);
        }
        .product:hover {
