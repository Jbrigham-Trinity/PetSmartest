<!DOCTYPE html>
<html>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #04cef1 50%, #1b86f9 100%);
            padding-top: 60px; /* Adjust this value based on the total height of your fixed header and nav */
        }

        header, nav {
            position: fixed;
            width: 100%;
            background: linear-gradient(to right, #04cef1 50%, #1b86f9 100%);
            color: white;
            display: flex;
            /* align-items: center; */
            padding: 10px 20px;
            z-index: 10;
        }

        .logo{
            width: 5px;
            height: auto;
            display: flex;
            align-items: center;
            object-fit: cover;
        }
        .logo :hover{
            transform: scale(1.1);
            transition: transform 0.3s ease-in-out;
        }

        .center-search, .right-icons {
            display: flex;
            align-items: center;
        }

        header {
            top: 0;
            justify-content: space-between;
        }

        nav {
            top: 60px; /* Adjust this value based on the height of your header */
            justify-content: center;
            gap: 10px;
        }

        input[type="text"] {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 25px;
            outline: none;
            font-size: 16px;
            /* margin-left: 580px; */
            align-items: center;
        }
        button[type="submit"] {
            padding: 10px 10px;
            border: none;
            border-radius: 25px;
            background-color: #007bff;
            color: white;
            font-size: 16px;
            cursor: pointer;
            outline: none;
            align-items: center;
            justify-self: center;
        }

        .search-form {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .search-input {
            padding: 10px;
            border: 2px solid #ccc;
            border-radius: 50px;
            outline: none;
            font-size: 16px;
            margin-right: -30px;
            z-index: 0;
        }

        .search-button {
            padding: 5px;
            border: none;
            background-color: #007bff;
            color: white;
            border-radius: 50px;
            cursor: pointer;
            outline: none;
            z-index: 1;
            position: relative;
            right: 5px;
            font-size: 20px;
        }

        .search-button:hover {
            background-color: #0056b3;
        }
        .fas {
            color: #ffffff;
        }
        .fa-shopping-cart {
            color: #ffffff;
            align-items: left;
            margin-right: 10px;
            justify-self: flex-end;

        }
        .fa-user {
            align-items: center;
            margin-right: 50px; 
        }

        .fa-shopping-cart:hover, .fa-user:hover {
            transform: scale(1.5);
            transition: transform 0.3s ease-in-out;
        }
        
        nav {
            padding: 10px 10px;
            display: flex;
            align-items: center;
            gap: 10px;
            justify-content: center;
            background: linear-gradient(to right, #04cef1 50%, #1b86f9 100%);
        }
        nav button {
            padding: 5px 35px;
            border: none;
            background-color: #007bff;
            color: white;
            border-radius: 50px;
            cursor: pointer;
            outline: none;
            font-size: 18px;
        }
        nav button:hover {
            background-color: #0056b3;
            transform: translateY(-0.25em);
        }
        .product {
            /* background-color: aquamarine; */
            padding: 5px;
            border-radius: 10px;
            text-align: center;
            color: white;
            border: 5px solid white;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 10px;
            padding: 20px;

        }
        .product button {
            padding: 5px 10px;
            border: none;
            background-color: #007bff;
            color: white;
            border-radius: 50px;
            cursor: pointer;
            outline: none;
            font-size: 14px;
            margin: 5px;
        }
        .product button:hover {
            background-color: #0056b3;
            transform: translateY(-0.25em);
        }
        .product:hover {
            /* background-color: #007bff; */
            transform: translateY(-0.25em);
        }
        .product img {
            width: 300px;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
        }
    </style>
    <header>
        <div class="logo">
            <a href="home" class="icon-link">
                <!-- <i class="fas fa-home"></i> -->
                <img src="tinyDog.png">
            </a>
        </div>
        <div class="center-search">
            <form action="/search" method="get" class="search-form">
                <input type="text" name="q" placeholder="Search..." class="search-input">
                <button type="submit" class="search-button">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
        <div class="right-icons">
            <a href="shoppingCart" class="icon-link">
                <i class="fas fa-shopping-cart fa-2x"></i>
            </a>
            <a href="profile.ejs" class="icon-link">
                <i class="fas fa-user fa-2x"></i>
            </a>
        </div>
    </header>
    
    <nav>
        <button class="nav-button">FOOD</button>
        <button class="nav-button">TOYS</button>
        <button class="nav-button">ACCESORIES</button>
        <button class="nav-button">HEALTH</button>
        <button class="nav-button">SERVICES</button>
        <button class="nav-button">BRANDS</button>
        <button class="nav-button">SALE</button>
        <button class="nav-button">NEW</button>
        <button class="nav-button">HELP</button>
        <button class="nav-button">FAQS</button>
    </nav>
    <body>
        <div class="product-grid">
            <% products.forEach(function(product) { %>
                <div class="product">
                    <img src="<%= product.image %>" alt="Product Image">
                    <h2><%= product.Name %></h2>
                    <p><%= product.Description %></p>
                    <p>Price: <%= product.Price %></p>
                    <!-- Add any additional product details here -->
                    <button>Add to Cart</button>
                    <button>Buy Now</button>
                    <button>View Reviews</button>
                </div>
            <% }); %>
        </div>
    </body>
</html>